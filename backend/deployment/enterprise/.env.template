# Enterprise Client Configuration Template
# Copy this file to .env and customize for your client

# Client Information
CLIENT_NAME=AcmeCorp
CLIENT_DOMAIN=ai.acmecorp.com
CLIENT_DB_NAME=ai_agent_platform_acmecorp

# Database Configuration
CLIENT_DB_USER=postgres
CLIENT_DB_PASSWORD=CHANGE_ME_SECURE_PASSWORD
DB_PORT=5432

# Redis Configuration
REDIS_PORT=6379

# API Configuration
API_PORT=8000

# Security Keys (Generate unique keys for each client)
JWT_SECRET_KEY=CHANGE_ME_GENERATE_SECURE_JWT_SECRET_KEY
ENCRYPTION_KEY=CHANGE_ME_GENERATE_32_CHAR_ENCRYPTION_KEY

# External API Keys
GEMINI_API_KEY=your_gemini_api_key_here
OPENAI_API_KEY=your_openai_api_key_here
SERP_API_KEY=your_serp_api_key_here

# SSO Configuration (Optional)
ENABLE_SSO=false
SSO_PROVIDER=saml
SSO_METADATA_URL=https://client-sso.com/metadata.xml

# Enterprise Features
ENABLE_AUDIT_LOGGING=true
BACKUP_SCHEDULE=0 2 * * *
DATA_RETENTION_DAYS=365

# Monitoring
GRAFANA_ADMIN_PASSWORD=CHANGE_ME_SECURE_GRAFANA_PASSWORD

# SSL/TLS (for production)
SSL_CERT_PATH=/etc/nginx/ssl/cert.pem
SSL_KEY_PATH=/etc/nginx/ssl/key.pem

# Resource Limits (adjust based on client size)
POSTGRES_MAX_CONNECTIONS=100
REDIS_MAXMEMORY=1gb
API_WORKERS=4
API_MAX_REQUESTS=1000